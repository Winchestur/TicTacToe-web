{% extends '../base-layout.twig' %}

{% block title %}{{ user.username }}{% endblock %}

{% block body %}
    <div class="row mt-2 pt-2">
        <div class="col-lg-9">
            <h3>{% block sectionTitle %}{{ user.username }}{% endblock %}</h3>
            <hr>
            <div class="bg-gray p-1 rounded-5" id="mainPanelContent" style="display: none;">
                {% block sectionBody %}
                    {% embed 'lang/' ~ locale ~ '/profile-panel-text.twig' %} {% endembed %}
                {% endblock %}
            </div>
        </div>
        {% embed '../sidebar.twig' %}
            {% block sidebarBody %}
                <section class="sidebar-item">
                    <h4>Change me</h4>
                    <div class="list-group">
                        <a class="list-group-item list-group-item-action" href="{{ path('edit_password') }}">
                            {{ dict.changePassword }}Change Password
                        </a>
                        <a class="list-group-item list-group-item-action" href="{{ path('remove_account') }}">
                            {{ dict.removeAccount }} Something do
                        </a>
                    </div>
                </section>

                <section class="sidebar-item">
                    <h4>Change me too</h4>
                    <div>
                        <a class="list-group-item list-group-item-action" href="{{ path('edit_password') }}">
                            {{ dict.changePassword }}Change Password
                        </a>
                        <a class="list-group-item list-group-item-action" href="{{ path('remove_account') }}">
                            {{ dict.removeAccount }} Do something
                        </a>
                    </div>
                </section>

            {% endblock %}
        {% endembed %}
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $('#mainPanelContent').show(300);
        });
    </script>

    {% block sectionScripts %}

    {% endblock %}

{% endblock %}